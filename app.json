{
  "expo": {
    "name": "Pill-Buddy",
    "slug": "Pill-Buddy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Pill-Buddy.webp",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Pill-Buddy.webp",
        "backgroundColor": "#0A0A0A"
      }, 
      "splash": {
        "image": "./assets/images/Pill-Buddy.webp",
        "backgroundColor": "#0A0A0A",
        "imageWidth": 500,
        "imageHeight": 500
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Pill-Buddy.webp"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/images/Pill-Buddy.webp",
          "imageWidth": 500,
          "imageHeight": 500,
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
